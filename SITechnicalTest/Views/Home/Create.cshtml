@model Supplier

@{
    if (Model.DateCreated == DateTime.MinValue || Model.DateCreated == null)
    {
        Model.DateCreated = DateTime.Today;
    }
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create Supplier
            </h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="CountryCode" class="p-0"></label>
            <input asp-for="CountryCode" class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="DateCreated" class="p-0"></label>
            <input asp-for="DateCreated" class="form-control" type="date" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
        </div>

    </div>
</form>
